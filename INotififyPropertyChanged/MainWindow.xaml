<Window x:Class="INotififyPropertyChanged.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INotififyPropertyChanged"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <Label> Numero 1</Label>
        <TextBox Width="100" Height="30" Text="{Binding Path= Num1,Mode=TwoWay}"></TextBox>
        <Label>Numero 2</Label>
        <TextBox Width="100" Height="30" Text="{Binding Path= Num2,Mode=TwoWay}"></TextBox>
        <Label>Resultado</Label>
        <TextBox Width="100" Height="30" Text="{Binding Path= Resultado,Mode=TwoWay}"></TextBox>

    </StackPanel>
</Window>
